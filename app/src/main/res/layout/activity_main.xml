<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <com.example.yongxiangzheng.myslidingtablayoutdemo.widget.MySlidingTabLayout
            android:id="@+id/st"
            android:layout_width="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:tl_textBold="SELECT"
            android:layout_height="44dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            app:tl_tab_space_equal="true"
            app:tl_indicator_margin_top="5dp"
            app:tl_indicator_height="48dp"
            app:tl_textSelectColor="#1DC4E9"
            app:tl_textUnselectColor="#000000"
            app:tl_indicator_color="#ffffff"
            app:tl_indicator_corner_radius="8dp"
            app:tl_indicator_margin_left="2dp"
            app:tl_indicator_margin_right="2dp"
            app:tl_indicator_style="BLOCK"
            app:unSelectedTextSize="16"
            app:selectedTextSize="22"/>

    <android.support.v4.view.ViewPager
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/vp_list"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/st"/>

</android.support.constraint.ConstraintLayout>